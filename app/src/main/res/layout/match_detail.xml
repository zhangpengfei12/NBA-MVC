<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:orientation="horizontal"
    android:background="#FFFFFFFF">

    <TextView
        android:id="@+id/team1_name"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/team1_logo"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="#292929"
        android:textSize="17sp"/>

    <ImageView
        android:id="@+id/team1_logo"
        android:layout_toLeftOf="@+id/point_layout"
        android:layout_centerVertical="true"
        android:layout_width="78px"
        android:layout_height="78px" />


    <LinearLayout
        android:id="@+id/point_layout"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:gravity="center"
            android:id="@+id/match_point"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"/>
        <Button
            android:layout_gravity="center"
            android:id="@+id/status"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:textSize="8sp"
            android:textColor="#B8B8B8"
            android:background="@drawable/status_shape"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/team2_logo"
        android:layout_toRightOf="@+id/point_layout"
        android:layout_centerVertical="true"
        android:layout_width="78px"
        android:layout_height="78px"
        />
    <TextView
        android:id="@+id/team2_name"
        android:layout_toRightOf="@id/team2_logo"
        android:layout_centerVertical="true"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textColor="#292929"
        android:textSize="17sp"/>

</RelativeLayout>
